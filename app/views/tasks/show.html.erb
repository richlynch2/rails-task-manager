<%= @task.title %>
<%= @task.details %>
<% if @task.completed %>
  <i class="far fa-check-square"></i>
<% else %>
  <i class="far fa-square"></i>
<% end %>
<%= link_to "return", tasks_path %>
<%= link_to "edit", edit_task_path %>
 <%= link_to task_path(@task), method: :delete, data: { confirm: "Are you sure you want to delete #{@task.title}?" } do %>
<i class="fas fa-trash"></i>
<% end %>
