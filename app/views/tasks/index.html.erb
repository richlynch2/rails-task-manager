<h1>MY TASKS</h1>
<% @tasks.each do |task| %>
  <h2><%= link_to task.title, task_path(task) %></h2>
  <% if task.completed %>
    <i class="far fa-check-square"></i>
  <% else %>
    <i class="far fa-square"></i>
  <% end %>
  <%= link_to task_path(task), method: :delete, data: { confirm: "Are you sure you want to delete #{task.title}?" } do %>
    <i class="fas fa-trash"></i>
  <% end %>
<% end %>
<p><%= link_to new_task_path do %><i class="fas fa-user-plus"></i><% end %></p>
